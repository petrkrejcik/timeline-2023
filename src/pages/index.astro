---
import type { Code, Debug } from "astro:components";
import Button from "../components/Button.astro";
import MainLayout from "../layouts/main.astro";
import { formatDate } from "../lib/date";
// import Post from "../layouts/post.astro";
const allPosts = await Astro.glob("./posts/*.md");
const sortedPosts = allPosts.sort((a, b) => {
  return a.frontmatter.pubDate < b.frontmatter.pubDate ? 1 : -1;
});

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<MainLayout>
  <div class="w-full flex justify-center items-center mb-4 gap-4">
    <img
      src="https://media.graphcms.com/output=format:jpg/resize=width:200,height:200/AVAb1jImQKWS7ZRB626M"
      class="rounded-3xl"
      alt="Petr Krejcik"
      height="200"
      width="200"
    />
    <div class="">
      <h1 class="text-4xl mb-2">
        Hi, I'm <span class="text-yellow-300">Petr</span>.
      </h1>
      <p>I'm a developer and this is what I've done.</p>
      <a href="https://www.linkedin.com/in/petrkrejcik" style="block" target="_blank">
        <div class="w-4 h-4 mt-2">
          <svg
            class="text-gray-400 hover:text-blue-500 fill-current"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 448 512"
          >
            <path
              d="M100.28 448H7.4V148.9h92.88zM53.79 108.1C24.09 108.1 0 83.5 0 53.8a53.79 53.79 0 0 1 107.58 0c0 29.7-24.1 54.3-53.79 54.3zM447.9 448h-92.68V302.4c0-34.7-.7-79.2-48.29-79.2-48.29 0-55.69 37.7-55.69 76.7V448h-92.78V148.9h89.08v40.8h1.3c12.4-23.5 42.69-48.3 87.88-48.3 94 0 111.28 61.9 111.28 142.3V448z"
            ></path>
          </svg>
        </div>
      </a>
    </div>
  </div>
  <div class="container mx-auto flex justify-center">
    <div class="ml-0 lg:w-2/3 sticky">
      <div class="container mx-auto w-full h-full">
        <div class="relative wrap overflow-hidden h-full">
          <div
            class="border-2-2 border-yellow-555 absolute h-full border"
            style="right: 50%; border: 1px solid #FFC100; border-radius: 1%;"
          >
          </div>
          <div
            class="border-2-2 border-yellow-555 absolute h-full border"
            style="left: 50%; border: 1px solid #FFC100; border-radius: 1%;"
          >
          </div>

          {
            sortedPosts.map((post, i) => (
              <div
                class:list={[
                  "mb-8",
                  "flex",
                  "justify-between",
                  "w-full",
                  "items-center",
                  { "flex-row-reverse": i % 2 === 0 },
                  { "left-timeline": i % 2 === 0 },
                  { "right-timeline": i % 2 !== 0 },
                ]}
              >
                <div class="order-1 w-5/12" />
                <div
                  class="order-1 border-2-2 border-yellow-555 w-1/12 border"
                  style={{
                    border: "1px solid #FFC100",
                    "border-radius": "1%",
                    "margin-right": i % 2 === 0 ? "9%" : 0,
                    "margin-left": i % 2 !== 0 ? "9%" : 0,
                  }}
                />
                <a
                  href={post.url}
                  style="block"
                  class="order-1 w-5/12 hover:bg-gray-900 transition-all duration-100 p-2 rounded-md"
                >
                  <div class:list={["px-1", "py-4"]}>
                    <p class="mb-3 text-yellow-300" transition:name={`pubDate-${post.url}`}>
                      {formatDate(new Date(post.frontmatter.pubDate), [{ month: "short" }, { year: "numeric" }])}
                    </p>
                    <h2 class="mb-3 font-bold text-lg md:text-2xl" transition:name={`title-${post.url}`}>
                      {post.frontmatter.title}
                    </h2>
                    <summary transition:name={`description-${post.url}`}>{post.frontmatter.description}</summary>
                    {post.frontmatter.image && (
                      <img
                        src={post.frontmatter.image.thumb}
                        alt={post.frontmatter.image.alt}
                        transition:name={`image-${post.url}`}
                        // class:list={["mt-6", { "ml-auto": i % 2 === 0 }, { "mr-auto": i % 2 !== 0 }]}
                        // height="320"
                      />
                    )}
                  </div>
                </a>
              </div>
            ))
          }
        </div>
        <!-- <img
        class="mx-auto -mt-36 md:-mt-36"
        src="https://user-images.githubusercontent.com/54521023/116968861-ef21a000-acd2-11eb-95ac-a34b5b490265.png"
      /> -->
      </div>
    </div>
  </div>
</MainLayout>
